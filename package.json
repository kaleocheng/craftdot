{
    "name": "craftdot",
    "version": "0.4.6",
    "description": "craftdot is a wapper of graphviz to get pretty diagram for your architecture/services diagrams.",
    "main": "index.js",
    "directories": {
        "example": "example"
    },
    "bin": {
        "craftdot": "cli.js"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kaleocheng/craftdot.git"
    },
    "author": "Kaleo Cheng",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kaleocheng/craftdot/issues"
    },
    "homepage": "https://github.com/kaleocheng/craftdot#readme",
    "dependencies": {
        "chokidar": "^3.3.1",
        "commander": "^2.20.0",
        "fastify": "^2.8.0",
        "fastify-static": "^4.2.4",
        "fastify-websocket": "^1.1.0",
        "get-port": "^5.1.1",
        "jison": "^0.4.18",
        "mustache": "^3.0.1"
    },
    "devDependencies": {
        "copy-files-from-to": "^3.2.2",
        "d3": "^7.8.4",
        "d3-graphviz": "^5.0.2",
        "viz.js": "^1.8.0"
    },
    "copyFiles": [
        {
            "from": "node_modules/d3/build/d3.min.js",
            "to": "dist/d3.min.js"
        },
        {
            "from": "node_modules/viz.js/viz.js",
            "to": "dist/viz.js"
        },
        {
            "from": "node_modules/d3-graphviz/build/d3-graphviz.min.js",
            "to": "dist/d3-graphviz.min.js"
        }
    ]
}
